<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.WhatTheCatDoin" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryVariant">@color/primary_variant</item>
		<item name="colorOnPrimary">@color/on_primary</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/secondary</item>
		<item name="colorSecondaryVariant">@color/secondary_variant</item>
		<item name="colorOnSecondary">@color/on_secondary</item>
		<!-- Background and text colors -->
		<item name="android:background">@color/background_light</item>
		<item name="android:textColor">@color/text_primary_light</item>
		<item name="colorOnBackground">@color/text_secondary_light</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>
</resources>
